_satellite.__registerScript('https://assets.adobedtm.com/fe7f29c660e2/7469e375e642/6c3d85e8fc94/RC8f7fa87d544049cbacbaf1502f7c640e-source.min.js', "<script>\n    $(function () {\n      function time2sec(arr) {\n          var sec = 0.000001 // dummy\n          if (arr.length == 2) {\n              sec = parseInt(arr[0]) * 60 + parseInt(arr[1])\n          } else if (arr.length == 3) {\n              sec = parseInt(arr[0]) * 60 * 60 + parseInt(arr[1]) * 60 + parseInt(arr[2])\n          }\n          return sec\n      }\n\n     try { \n          var videoPlayer = videojs(\"vod1\")\n          var evtListener = function (status) {\n              var statusTo = status // play, pause\n              var videoId = $(\"[data-video-id]\").attr(\"data-video-id\");\n              var videoTitle = $(\"meta[property='og:description']\").attr(\"content\") // 07.14 수정\n\n              var roadTime = $('.vjs-current-time-display').text()\n              var fullTime = $('.vjs-duration-display').text()\n\n              var videoTime = fullTime.split(':')\n              var videoTime2Sec = time2sec(videoTime)\n              var playTime = roadTime.split(':')\n              var playTime2Sec = time2sec(playTime)\n\n              _satellite.track('video_play', {\n                  'video': {\n                      'videoId': videoId,\n                      'videoTitle': videoTitle,\n                      'playTime': roadTime + '/' + fullTime,\n                      'playPercentage': parseInt(playTime2Sec / videoTime2Sec * 100),\n                      'videoStatusTo': statusTo\n                  }\n              })\n          }\n\n          var onPlayTo = function () { return evtListener('play') }\n          var onPauseTo = function () { return evtListener('pause') }\n\n          videoPlayer.on(\"play\", onPlayTo);\n          videoPlayer.on(\"pause\", onPauseTo);\n       \n        } catch(e){\n        //console.log('AA - VideoPlay Listener Err')\n        }\n    });\n</script>");